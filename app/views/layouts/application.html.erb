<!DOCTYPE html>
<html>
  <head>
    <title>ReconShots</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>
    
    <nav class="navbar navbar-default navbar-fixed-top navbar-transparent">
      <div class="container">
        <ul class="nav navbar-nav navbar-left">
          <li><%= link_to "Recon Shots", root_path, class: 'navbar-title' %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li>
              <%= link_to '展示場', museums_path, class: 'navbar-btn' %>
            </li>
          <% if logged_in? %>
            <li>
              <%= link_to '投稿',  new_post_path, class: 'navbar-btn' %>
            </li>
            <li>
              <%= link_to 'マイページ', mypage_path, class: 'navbar-btn' %>
            </li>
          <% end %>
            <li>
              <%= link_to 'ログアウト', logout_path, method: :delete, class: 'navbar-btn' %>
            </li>
          <% else %>
            <li>
              <%= link_to '登録', new_user_path, class: 'navbar-btn' %>
            </li>
            <li>
              <%= link_to 'ログイン', login_path, class: 'navbar-btn' %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    
    <%= yield %>
    
    <script>
       $(function(){
          $(".alert").fadeOut(5000);
       });
    </script>
  </body>
</html>
