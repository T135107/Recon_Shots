<div class="users-show-wrapper">
  <div class="container">
    <div class="row">
       <div class="users-show-container">
          <h1 class="user-name">
            <%= @user.name %>
          </h1>
          <% if logged_in? && @user == current_user %>
            <h4 class="user-email">
              メールアドレス <%= @user.email %>
            </h4>
          <% end %>
       </div>
    </div>
  </div>
</div>

