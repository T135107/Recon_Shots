<div class="post-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">投稿</h1></h1>
        <%= form_for @post do |f| %>
          <div class="form-group">
            <%= f.label :画像 %>
            <%= f.file_field :image %>
          </div>
          <div class="form-group">
            <%= f.label :展示場 %>
            <%= f.collection_select :museum_id, Museum.all, :id, :name %>
          </div>
          <div class="form-group">
            <%= f.label :飛行機 %>
            <%= f.collection_select :airplane_id, Airplane.all, :id, :name %>
          </div>
          <div class="form-group">
            <%= f.label :概要 %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
        <% if logged_in? %>
          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>